function RollOver(imgName, over)
{  

   if (document.images && imgName != currSelection)
   {
      currImage=eval("document." + imgName);
      if (!currImage)
         return;
      if (over)
         currImage.src=eval(imgName + "_on.src");
      else
         currImage.src=eval(imgName + "_off.src");
   }
}

function setSelection(imgName)
{
   if (document.images && imgName != currSelection)
   {
      if (currSelection != "")
      {
         // Turn of previous selection
         currImage=eval("document." + currSelection);
         if (currImage)
         {
            currImage.src=eval(currSelection + "_off.src");
         }
      }
      currSelection=imgName;
      
      if (currSelection != "")
      {
         currImage=eval("document." + currSelection);
         if (currImage)
         {
            currImage.src=eval(currSelection + "_on.src");
         }
      }
   }
}

