<div id="three-3202" class="section section-text-over-media section-text-over-image section-text-over-media-3202 has-text" data-viewport-height>
  <div class="text text-over-media-inner center center normal">
    
      <h2 class="text-inner">
        Up for a fight
      </h2>
    
  </div>

  <div class="background-overlay">
    
  </div>

  

  <img alt="" data-src="./media/argentine_ant_4_high_res_crop-hr.jpg" class="section-background-image text-over-media-background-image retina-only">
</div>

