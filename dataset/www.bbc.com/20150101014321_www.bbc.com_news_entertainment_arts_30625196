  <!-- all multi-edition pages that are not indexes eg. story pages need the title -->
  var storyTitle = "BBC+News+-+New+Year+Honours%3A+John+Hurt+receives+a+knighthood".replace(new RegExp('\\+', 'gi'),' ');//remove the plus signs
