        (function(){
            var zone = "3pt_zone_file";
            var zoneAuto = false;
            var siteAuto = false;
            var keywordsAuto = false;
            var zoneOverride = false;

            zone = 'travel_zone';
            zoneAuto = 'tvl_dest_australia_content';
            siteAuto = 'bbccom.live.site.travel';
            keywordsAuto = {tvl_theme:"beaches", tvl_dest:"australia"};
