  var storyTitle = "BBC+News+-+Consumers+and+tech+-+does+Las+Vegas+know+what+you+want%3F".replace(new RegExp('\\+', 'gi'),' ');//remove the plus signs
  storyTitle = decodeURIComponent(storyTitle.replace("BBC News - ",""));//remove the sub-string 'BBC News' and convert utf-8 chars to html
