    // Extract this window's parent URL and referer, to be sent to the iframe
    VDNA_parent_url = window.location.href,
    VDNA_referrer_url = (document.referrer == "" || document.referrer === null || document.referrer == "null") ? ((typeof(window.http_referrer) == "undefined" || window.http_referrer === null) ? "" : window.http_referrer) : document.referrer,
